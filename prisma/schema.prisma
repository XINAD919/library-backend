// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Book {
  id              Int         @id @default(autoincrement())
  title           String
  author          String
  publicationDate Int?
  synopsis        String?
  publisher       String?
  genre           String?
  quantity        Int?
  images          BookImage[]
}

model BookImage {
  id     Int    @id @default(autoincrement())
  image  String
  Book   Book?  @relation(fields: [bookId], references: [id])
  bookId Int?
}
